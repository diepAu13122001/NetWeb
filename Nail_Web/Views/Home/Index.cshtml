  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css"
        integrity="sha512-17EgCFERpgZKcm0j0fEq1YCJuyAWdz9KUtv1EjVuaOz8pDnh/0nZxmU6BBXwaaxqoi9PQXnRWqlcDB027hgv9A=="
        crossorigin="anonymous" referrerpolicy="no-referrer"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css"
        integrity="sha512-yHknP1/AwR+yx26cB1y0cjvQUMvEa2PFzt1c9LlS4pRQ5NOTZFWbhBig+X9G9eYW/8m0/4OXNx8pxJ6z57x0dw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"/>
  <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
  <link rel="stylesheet" href="~/css/common.css">
  <link rel="stylesheet" href="~/css/reponsiveCommon.css">
  <link rel="stylesheet" href="~/css/reponsiveMenu.css">
  <link rel="stylesheet" href="~/css/home-page.css">
  <link rel="stylesheet" href="~/css/reponsive.css">
}

<!--  slider -->
<div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <!--    carousel-fade: hiệu ứng mờ dần fade-in, fade_out-->
  <div class="carousel-indicators">
    <!--      cho biết số phần tử slide đã có và slide đang hiện trong caroulse này-->
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
            aria-label="Slide 3"></button>
  </div>
  <!--    chứa các item trong slide, chứa nhiều item-->
  <div class="carousel-inner">
    <!--      item đang hoạt động trong slide-->
    <div class="carousel-item active">
      <img
        src="https://img1.wsimg.com/isteam/ip/43ec8ffb-cdee-4bf8-9443-47c14b73e8a3/Face%20and%20hand%20wallpaper.png/:/cr=t:0%25,l:0%25,w:100%25,h:100%25/rs=w:1160,h:653"
        class="d-block w-100" alt="Nnail" tilte="Nnail">
      <div class="carousel-caption d-none d-md-block text-start">
        <h1 class="fw-bold ms-2">Nail <span class="text-dark">Polish</span></h1>
        <p class="fw-normal ms-2">Nnail take care your hand</p>
      </div>
    </div>
    <div class="carousel-item">
      <img
        src="https://img.grouponcdn.com/deal/27tEojZykZjXmVdHoAV9SLYQnxSG/27-3588x2100/v1/c870x524.webp"
        class="d-block w-100" alt="Nnail" tilte="Nnail">
      <div class="carousel-caption d-none d-md-block text-start">
        <h1 class="fw-bold">Nail <span class="text-light">Care</span></h1>
        <p class="fw-normal">Nnail take care your hand</p>
      </div>
    </div>
    <div class="carousel-item">
      <img
        src="https://www.dominion-nails.com/wp-content/uploads/2018/12/service-homepage.jpg"
        class="d-block w-100" alt="Nnail" tilte="Nnail">
      <div class="carousel-caption d-none d-md-block text-start">
        <h1 class="fw-bold"><span class="text-dark">Fake</span> Nail</h1>
        <p class="fw-normal">Nnail take care your hand</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev " type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<!-- body -->
<div class="body">
  <div class="slick-product">
    <div class="slide-product bg-white mx-auto" id="image-slide">
    </div>
  </div>
  <div class="body-2 mt-5">
    <div class="title text-center mt-5">
      <h5 class="fs-5 fw-normal">THE LATEST</h5>
      <h2 class="fs-2 fw-bold lh-1 mb-4">Trending Products</h2>
      <h1 class="border-bottom border-4 m-auto"></h1>
    </div>
    <div class=" mb-5">
      <div class="product mt-5 container text-center">
        <div class="w-100 row" id="cart-product">
               @foreach (var item in Model)
                    {
                       @if (item.Prd_ImportedDate >= DateTime.Today.AddDays(-60))
                       {
                           @for (var i = 0; i < 8; i++)
                           {
                               <div class="col-md-3 col-6">
                <div class="icon-produce position-absolute d-block">
                  <div class="w3-container">
                    <button class="icon-eye border-0 bg-white mt-3 w3-animate-right">
                     <i class="bi bi-eye">
                    </i>
                    </button>
                  </div>
                  <div class="w3-container">
                    <button class="icon-heart border-0 bg-white mt-1 w3-animate-right">
                        <i class= "bi bi-heart" ></i>
                    </button>
                  </div>
                </div>
               <div class="container">
               <a asp-action="ProductDetail" asp-route-id="@item.Prd_Id">
                 <img src="@Html.DisplayFor(modelItem => item.Prd_AvaUrl)" alt="Nnail" class="image">
                <div class="overlay">
                  <img src="@Html.DisplayFor(modelItem => item.Prd_AvaUrl)" alt="Nnail">
                </div>
                </a>
                </div>
                  <div class="icon-start d-flex justify-content-center">
                                @for (var j = 0; j <  item.GetRating(item.Prd_Id); j++)
                                {
                                     <i class="bi-star-fill text-warning mx-1"></i>
                                }
                  </div>
                <div class="name-product mt-2 text-center">
                  <span class="name text-dark fw-normal">@Html.DisplayFor(modelItem => item.Prd_Name.Substring(0, 10))...</span>
                  <div class="price mt-4">
                    <span class="old-price fw-normal text-decoration-line-through">
                      @{item.getMinUnitPrice(item.Prd_Id);}đ
                    </span>
                    <span class="new-price ms-2">
                      @{item.getRealPrice(item.Prd_Id);}đ
                    </span>
                  </div>
                  <div class="w3-container mb-5">
                    <button class="w3-center w3-animate-bottom add-to-cart border-0 position-absolute ms-5">
                      <a class="text-decoration-none text-uppercase text-white" asp-controller="Bills" asp-action="Cart">add to cart</a></button>
                  </div>
                </div>
              </div> 
                           }
                       }
                    } 
        </div>
        <button class="view d-flex justify-content-center border-0 py-2 px-4 mt-5 mx-auto">
          <a class="text-decoration-none text-uppercase  text-white" href="#">View more..</a></button>
      </div>
    </div>
    <div class="title text-center mt-5">
      <h5 class="fs-5 mt-5 fw-normal">THE PRODUCTS</h5>
      <h2 class="fs-2 fw-bold lh-1 mb-4">Our Services</h2>
      <h1 class="border-bottom border-4 mx-auto"></h1>
    </div>
    <div class="services mb-5 d-flex justify-content-center">
      <div class="container">
        <div class="col-md-12">
          <div class="row" id="service">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="body-1">
    <div class="title text-center mt-5 mb-5">
      <h5 class="fs-5 fw-normal">THE LATEST</h5>
      <h2 class="fs-2 fw-bold lh-1 mb-4">Our Category</h2>
      <h1 class="border-bottom border-4 mx-auto mb-5"></h1>
      <div class="d-flex justify-content-center align-items-center">
        <button class="border-0 categoty text-white" onclick="category1()">categoty1</button>
        <button class="border-0 categoty text-white" onclick="category2()">categoty2</button>
        <button class="border-0 categoty text-white" onclick="category3()">categoty3</button>
      </div>
    </div>
    <div class="container">
      <div class="col-md-12">
        <div class="row d-flex justify-content-center" id="categorys">
        </div>
      </div>
    </div>
  </div>
  <div class="body-3">
    <div class="title text-center mt-5 mb-5">
      <h5 class="fs-5 fw-normal">THE LATEST</h5>
      <h2 class="fs-2 fw-bold lh-1 mb-4">Our Team</h2>
      <h1 class="border-bottom border-4 mx-auto"></h1>
    </div>
    <div class="our-team border-0  d-flex justify-content-center">
      <div class="slideshow w-75 mx-auto" id="slick-team">
      </div>
    </div>
  </div>
  <div class="body-4 container my-5">
    <div class="title text-center mt-5 mb-5">
      <h5 class="fs-5 fw-normal"> VIDEOS NAIL</h5>
      <h2 class="fs-2 fw-bold lh-1 mb-4">Trend Nail</h2>
      <h1 class="border-bottom border-4 mx-auto"></h1>
    </div>
    <div class="col-md-12 d-flex justify-content-center">
      <div class="row" id="video-slide">
      </div>
    </div>
  </div>
</div>

